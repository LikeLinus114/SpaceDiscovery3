<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:id="@+id/station_name"
            android:text="[name]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.011"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            />

    <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:text="Type:"
            app:layout_constraintEnd_toStartOf="@+id/station_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/station_image" />
    <TextView
            android:id="@+id/station_type"
            android:text="[type]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView5"/>
    <ImageView
            android:id="@+id/station_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Distance:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="12dp" app:layout_constraintEnd_toEndOf="@+id/textView5"
            android:id="@+id/textView7"/>
    <TextView
            android:id="@+id/station_distance"
            android:text="[distance]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/textView7" app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Signal quality:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginTop="12dp" app:layout_constraintEnd_toEndOf="@+id/textView7"
            android:id="@+id/textView8"/>
    <TextView
            android:id="@+id/station_signal_quality"
            android:text="[quality]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/textView8" app:layout_constraintStart_toEndOf="@+id/textView8"
            android:layout_marginStart="8dp"/>

    <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="169dp"
            android:layout_height="62dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toStartOf="@+id/station_image"
            app:layout_constraintTop_toBottomOf="@+id/textView8">

        <TextView
                android:id="@+id/station_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="true"
                android:gravity="center_horizontal"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                android:text="[description]" />
    </ScrollView>

    <Button
            android:id="@+id/show_messages_history"
            android:text="Show messages history"
            android:textSize="10dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/station_image"
            app:layout_constraintEnd_toEndOf="@+id/scrollView2"
            app:layout_constraintStart_toStartOf="@+id/scrollView2"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2" />
    <View
            android:background="#BECFDD"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/station_image"
            android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
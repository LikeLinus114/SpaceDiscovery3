<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_color">
    <TextView
            android:id="@+id/section_name"
            android:text="@string/map_of_galaxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"/>
    <ImageView
            android:id="@+id/galaxy_map"
            android:src="@drawable/galaxy_map_dummy"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            app:layout_anchorGravity="bottom|center"
            app:layout_anchor="@+id/section_name"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/section_name"
            android:layout_marginTop="20dp"/>
    <TextView
            android:id="@+id/last_update_label"
            android:text="Last updated:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:paddingTop="5dp"
            app:layout_anchorGravity="bottom|center"
            app:layout_anchor="@+id/galaxy_map"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/galaxy_map" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.352"/>
    <TextView
            android:id="@+id/last_update"
            android:text="[date of the last update]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            app:layout_anchorGravity="end|center"
            app:layout_anchor="@+id/last_update_label"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/galaxy_map" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.833"/>
    <TextView
            android:id="@+id/update_request_status_label"
            android:text="Status of the update request:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingTop="5dp"
            app:layout_anchorGravity="end|bottom"
            app:layout_anchor="@+id/last_update_label"
            app:layout_constraintTop_toBottomOf="@+id/last_update_label"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.019"/>
    <TextView
            android:text="[status of the update request]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            app:layout_anchorGravity="end|center"
            app:layout_anchor="@+id/update_request_status_label"
            android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/last_update" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.984"
    />
    <ImageView
            android:id="@+id/update_button"
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:layout_gravity="center|bottom"
            app:layout_anchorGravity="end|bottom"
            app:layout_anchor="@+id/update_request_status_label"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintHorizontal_bias="0.498"/>
</androidx.constraintlayout.widget.ConstraintLayout>
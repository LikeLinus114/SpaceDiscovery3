<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_color2">
    <TextView
            android:id="@+id/body_name"
            android:text="[name]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.011"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
    />
    <TextView
            android:text="Type:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintVertical_bias="0.213" android:id="@+id/textView5"/>
    <TextView
            android:id="@+id/body_type"
            android:text="[type]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView5"/>
    <ImageView
            android:id="@+id/body_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Distance:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="12dp" app:layout_constraintEnd_toEndOf="@+id/textView5"
            android:id="@+id/textView7"/>
    <TextView
            android:id="@+id/body_distance"
            android:text="[distance]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/textView7" app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginStart="8dp"/>
    <ScrollView android:layout_width="169dp"
                android:layout_height="139dp"
                app:layout_constraintEnd_toStartOf="@+id/body_image"
                android:layout_marginEnd="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/body_image">
        <TextView
                android:id="@+id/body_description"
                android:text="[description]"
                android:scrollbars="vertical"
                android:scrollbarStyle="insideOverlay"
                android:fadeScrollbars="true"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </ScrollView>
    <View
            android:background="#BECFDD"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/body_image"
            android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
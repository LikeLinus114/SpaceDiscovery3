<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/gradient_color">
    <TextView
            android:id="@+id/section_name"
            android:text="@string/locate_current_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <ImageView
            android:id="@+id/solar_system_map"
            android:src="@drawable/solar_system_map_dummy"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            app:layout_anchorGravity="bottom|center"
            app:layout_anchor="@+id/section_name"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/section_name"
            android:layout_marginTop="20dp"/>
    <TextView
            android:id="@+id/last_update_label"
            android:text="Last updated:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            app:layout_anchor="@+id/solar_system_map"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/solar_system_map"
            app:layout_constraintHorizontal_bias="0.369"
            android:layout_marginTop="12dp"/>
    <TextView
            android:id="@+id/last_update"
            android:text="[date of the last update]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            app:layout_anchorGravity="end|center"
            app:layout_anchor="@+id/last_update_label"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/solar_system_map" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.846"/>
    <TextView
            android:id="@+id/connection_rates_label"
            android:text="Connection rates:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingTop="5dp"
            app:layout_anchorGravity="end|bottom"
            app:layout_anchor="@+id/last_update_label"
            app:layout_constraintTop_toBottomOf="@+id/last_update_label"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.303"/>
    <TextView
            android:text="[connection rates %]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            app:layout_anchorGravity="end|center"
            app:layout_anchor="@+id/connection_rates_label"
            app:layout_constraintTop_toBottomOf="@+id/last_update"
            android:id="@+id/textView3"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.773"/>
</androidx.constraintlayout.widget.ConstraintLayout>